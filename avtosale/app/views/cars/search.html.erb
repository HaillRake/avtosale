<h1><%= t('.rules') %></h1>

<div>
  <%= form_with url: cars_path, method: :get, data: { turbo: false } do |f| %>
  <div class="form-group">
    <%= f.label :make, t('make') %>
    <%= f.text_field :make, value: params[:make]%>
  </div> 
   <div class="form-group"> 
    <%= f.label :model, t('model') %>
    <%= f.text_field :model, value: params[:model]%>   
  </div>
  <div class="form-group">
    <%= f.label :year, t('years') %> 
    <div>
       <%= f.number_field :year_from, value: params[:year_from] %>
       <%= f.number_field :year_to, value: params[:year_to] %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, t('price') %>
    <div>
       <%= f.number_field :price_from, value: params[:price_from] %>
       <%= f.number_field :price_to, value: params[:price_to] %> 
    </div>
  </div>
    <%= f.submit t('.search'), class: 'btn btn-primary' %>
  <% end %>
</div>

<%= render 'share/footer' %>
